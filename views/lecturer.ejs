<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <% if (lecturer) { %>
    <form action="/delete-lecturer" method="POST">
      <button type="submit">Delete Lecturer</button>
      <input type="hidden" name="lecturerId" value="<%= id %>" />
    </form>

    <a href="/edit-lecturer/<%= id %>">Edit Lecturer</a>

    <h1><%= lecturer.name %> <%= lecturer.surname %></h1>
    <p>Email: <%= lecturer.email %></p>
    <!-- <p>Phone number: <% lecturer.phone %></p> -->

    <% if (lecturer.age) { %>
    <p>Age: <%= lecturer.age %></p>
    <% } %>

    <h2>Lecturer group:</h2>

    <% if (group) { %>
    <p><%= group.name %></p>
    <% } else { %>
    <p>No group assigned.</p>
    <% } %>

    <h2>Lecturer Subjects:</h2>
    <% if (subjects && subjects.length > 0) { %>
    <ul>
      <% subjects.forEach(subject => { %>
      <li><%= subject.name %></li>
      <% }); %>
    </ul>
    <% } else { %>
    <p>No subjects assigned to this lecturer.</p>
    <% } %>

    <a href="/lecturers">Back to lecturers</a>
    <% } else {%>
    <h1>Lecturer not found</h1>
    <p>
      Lecturer with id <span style="color: red"><%= id %></span> was not found.
    </p>
    <a href="/lecturers">Back to lecturers</a>
    <% } %>
  </body>
</html>
