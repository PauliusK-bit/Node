<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <% if (group) { %>
    <form action="/delete-group" method="POST">
      <button type="submit">Delete Group</button>
      <input type="hidden" name="groupId" value="<%= group._id %>" />
    </form>

    <h2>Students in this group:</h2>

    <% if (students && students.length > 0) { %>
    <ul>
      <% students.forEach(student => { %>
      <li><%= student.name %> <%= student.surname %> (<%= student.age %>)</li>
      <% }); %>
    </ul>
    <% } else { %>
    <p>No students assigned to this group.</p>
    <% } %>

    <a href="/edit-group/<%= group._id %>">Edit Group</a>

    <h1><%= group.name %></h1>

    <a href="/groups">Back to groups</a>
    <% } else { %>
    <h1>Group not found</h1>
    <p>
      Group with id <span style="color: red"><%= group._id %></span> was not
      found.
    </p>
    <a href="/groups">Back to groups</a>
    <% } %>
  </body>
</html>
